---
import Nivel20Logo from "../assets/logo-nivel20.svg";
import Section from "../layouts/Section.astro";
import Form from "../components/Form.tsx";
import { Application } from "../config";
---

<Section>
	<header>
		<div class="title">
			{
				Application.version.startsWith("0") && (
					<span class="beta">beta</span>
				)
			}
			<h1>Alejoide's</h1>
			<img
				src={Nivel20Logo.src}
				alt="Logo de Nivel 20 5e Sheet Generator"
			/>
			<h1>5e Sheet Generator</h1>
		</div>
		<Form client:load />
	</header>
</Section>

<style>
	header {
		width: 100%;
		height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.title {
		display: flex;
		align-items: center;
		flex-direction: column;
		margin-bottom: 16px;
	}

	h1 {
		margin: 0;
	}

	.beta {
		position: absolute;
		background-color: var(--accentColor);
		color: var(--fontColor);
		padding: 0.3em;
		margin-left: 17em;
		margin-top: 8em;
		border-radius: var(--borderRadius);
		rotate: -45deg;
	}
</style>
